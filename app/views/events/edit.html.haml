.page-header
  %h1= t('layouts.event_edit_top')

= form_for(@event, class: 'form-horizontal', role: 'form', builder: ApplicationFormBuilder ) do |f|
  = error_messages_for(@event)
  = render partial: 'event_form', locals: { f: f }
  = f.submit t('layouts.event_edit_label'), class: 'btn btn-default', data: { disable_with: t('layouts.event_edit_working') }
