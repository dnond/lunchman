.page-header
  %h1= t('layouts.event_show_top')

= render partial: 'participate_form', locals: { event: @event, current_user_participant: @current_user_participant }

.row
  .col-md-4
    - if @event.leader?(current_user)
      = link_to t('layouts.event_edit'), edit_event_path(@event), class: 'btn'
      = link_to t('layouts.event_delete'), event_path(@event), class: 'btn', method: :delete, data: { confirm: t('confirm.event_delete') }
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        = t('activerecord.attributes.event.status')
      .panel-body
        = status_participatable( @event )

    .panel.panel-default
      .panel-heading
        = t('activerecord.attributes.event.name')
      .panel-body
        = @event.name

    .panel.panel-default
      .panel-heading
        = t('layouts.event_leader_name')
      .panel-body
        = @event.leader_user.name

    .panel.panel-default
      .panel-heading
        = t('activerecord.attributes.event.event_at')
      .panel-body
        = @event.event_at.strftime(I18n.t('time.formats.long'))

    .panel.panel-default
      .panel-heading
        = t('activerecord.attributes.event.deadline_at')
      .panel-body
        = deadline_at( @event )

    .panel.panel-default
      .panel-heading
        = t('activerecord.attributes.event.comment')
      .panel-body
        = @event.comment

    .panel.panel-default
      .panel-heading
        = t('activerecord.attributes.event.max_participants')
      .panel-body
        = @event.max_participants
        = t('layouts.participant_unit')
.row
  .col-md-8
    = link_to t('layouts.link_to_event_list'), events_path, class: 'btn'
