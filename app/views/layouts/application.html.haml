!!!
%html
  %head
    %title AwesomeEvents
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header.navbar.navbar-default{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Togle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'AwesomeEvents', root_path, class: 'nabvar-brand'
        #bs-exmple-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            / %li= link_to 'イベントを作る' , new_event_path
            / - if logged_in?
            /   %li= link_to '退会', retire_user_path
            /   %li= link_to 'ログアウト', logout_path
            / - else
            /   %li= link_to 'Googleでログイン', '/users/info'
    .container
      - if flash[:notice]
        .alert.alert-success
          = flash[:notice]
      - if flash[:alert]
        .alert.alert-success
          = flash[:alert]
      = yield
